{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "commonjs", // Or "esnext" if you're using ES modules
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"  // or "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*"
  ]
}